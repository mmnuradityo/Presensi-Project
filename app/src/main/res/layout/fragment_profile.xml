<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/space_extra"
    tools:context=".view.fragment.ProfileFragment">

    <FrameLayout
        android:id="@+id/fl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginLeft="@dimen/space_normal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="@dimen/space_small"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginLeft="@dimen/space_small"
            android:layout_marginEnd="@dimen/space_small"
            android:layout_marginRight="@dimen/space_small"
            android:paddingTop="56dp"
            android:paddingBottom="@dimen/space_normal"
            android:paddingStart="@dimen/space_normal"
            android:paddingEnd="@dimen/space_normal"
            android:paddingLeft="@dimen/space_normal"
            android:paddingRight="@dimen/space_normal"
            android:elevation="@dimen/space_small"
            android:gravity="center"
            android:background="@drawable/roundedcorner">

            <TextView
                android:id="@+id/tv_nama_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title"
                android:text="Nama"
                android:layout_marginStart="@dimen/space_normal"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginBottom="@dimen/space_medium"
                android:textColor="@color/colorTextNormal" />

            <TextView
                android:id="@+id/tv_nim_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="Nim"
                android:layout_marginStart="@dimen/space_normal"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginBottom="@dimen/space_medium"
                android:textColor="@color/colorTextNormal" />

            <TextView
                android:id="@+id/tv_kelas_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="Kelas"
                android:layout_marginStart="@dimen/space_normal"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginBottom="@dimen/space_normal"
                android:textColor="@color/colorTextNormal" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:background="@android:color/transparent"
            android:elevation="@dimen/space_small"
            android:layout_margin="@dimen/space_small"
            app:civ_border_width="@dimen/space_small"
            app:civ_border_color="@color/colorPrimary"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_menu_profile"
        android:layout_below="@+id/fl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title"
        android:textColor="@color/colorPrimary"
        android:text="Menu"
        android:textStyle="bold"
        android:layout_margin="@dimen/space_large"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/ll_menu_first_profile"
        android:layout_below="@id/tv_menu_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/space_normal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_khs_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_marginEnd="@dimen/space_large"
            android:layout_marginRight="@dimen/space_large"
            android:background="@drawable/roundedcorner"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/space_normal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_assignment_turned" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_medium"
                android:text="KHS"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_detail" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transkrip_nilai_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginLeft="@dimen/space_large"
            android:background="@drawable/roundedcorner"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/space_normal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_assignment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_medium"
                android:text="Transkrip Nilai"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_detail" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>