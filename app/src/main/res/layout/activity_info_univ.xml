<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.InfoUnivActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/univ_amikom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="126dp"
                android:layout_marginLeft="126dp"
                android:layout_marginTop="178dp"
                android:background="@drawable/roundedcorner"
                android:paddingStart="@dimen/space_large"
                android:paddingLeft="@dimen/space_large"
                android:paddingTop="@dimen/space_normal"
                android:paddingEnd="@dimen/space_large"
                android:paddingRight="@dimen/space_large"
                android:paddingBottom="@dimen/space_normal"
                android:text="About Amikom Yogyakarta"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="@dimen/space_large"
                android:layout_marginLeft="@dimen/space_large"
                android:layout_marginTop="152dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="45dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_normal"
                    android:src="@drawable/logo_amikom" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_logo"
                android:layout_margin="@dimen/space_large"
                android:paddingStart="@dimen/text_normal"
                android:paddingLeft="@dimen/text_normal"
                android:paddingEnd="@dimen/text_normal"
                android:paddingRight="@dimen/text_normal"
                android:text="@string/amikom_detail"
                android:textColor="@color/colorTextNormal"
                android:textSize="@dimen/text_normal" />

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_back_info_univ"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/space_normal"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimary"
        android:tintMode="src_atop"
        android:src="@drawable/ic_back" />

</RelativeLayout>
